<div class="home-container">
  <% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <p><%= blog_post.content %></p>
    <%= l(blog_post.created_at, format: :long) %>
    <p><%= blog_post.user.name %></p>
  </div>
  <% end %>
  <%= paginate @blog_posts %>
</div>
